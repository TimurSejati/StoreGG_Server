<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No</th>
      <th>Jenis Pembayaran</th>
      <th>Bank</th>
      <th>Status</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < payment.length; i++){ %>
    <tr>
      <td><%= i+ 1 %></td>
      <td><%= payment[i].type %></td>
      <td>
        <% payment[i].banks.forEach(bank => { %>
        <span class="badge badge-success">
          <%= bank.name %>-<%= bank.nameBank %>-<%= bank.noRekening %>
        </span>
        <% }) %>
      </td>
      <td>
        <% if(payment[i].status === "Y"){ %>
        <span class="badge badge-success"> Aktif </span>
        <% }else{%>
        <span class="badge badge-danger"> Not Aktif </span>
        <% }%>
      </td>
      <td>
        <form
          action="/payment/delete/<%= payment[i]._id %>?_method=DELETE"
          method="POST"
        >
          <a href="/payment/edit/<%= payment[i]._id %>" class="btn btn-warning">
            <i class="fas fa-pencil-alt"></i>
            Ubah</a
          >
          <button class="btn btn-danger">
            <i class="fas fa-trash"></i> Hapus
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
